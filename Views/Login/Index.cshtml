@{
	ViewData["Title"] = "Login";
}

<head>
	<link href="~/css/home.css" rel="stylesheet" />
</head>

<div class="background-container">
    <div class="content">
        <div class="container d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow p-4" style="width: 400px; background-color: #1f2d32;">
                <h3 class="text-center mb-4 text-white">Login</h3>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }
                <form asp-action="Index" asp-controller="Login" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label text-white">Email</label>
                        <input placeholder="Please enter email" type="email" class="form-control" id="email" name="Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label text-white">Password</label>
                        <input placeholder="Please enter password" type="password" class="form-control" id="password" name="Password" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
                <div class="text-center mt-3">
                    <p class="text-white">Don't have an account? <a asp-action="Register" asp-controller="Login" class="text-decoration-none">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>